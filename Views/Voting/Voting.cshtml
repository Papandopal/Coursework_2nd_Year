@{
	string name = ViewBag.Name;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Голосование</title>
	<style>
		body {
			font-family: Arial, sans-serif;
			max-width: 500px;
			margin: 50px auto;
			padding: 20px;
			text-align: center;
		}

		.form-group {
			margin-bottom: 15px;
		}

			.form-group label {
				display: block;
				margin-bottom: 5px;
				font-weight: bold;
			}

			.form-group select {
				width: 100%;
				padding: 8px;
				font-size: 16px;
			}

		.btn {
			background-color: #4CAF50;
			color: white;
			padding: 10px 20px;
			border: none;
			cursor: pointer;
			font-size: 16px;
			border-radius: 4px;
		}

			.btn:hover {
				background-color: #45a049;
			}

			.btn:disabled {
				background-color: #cccccc;
				cursor: not-allowed;
			}

		.status {
			margin-top: 20px;
			font-size: 14px;
			color: #333;
		}
	</style>
</head>
<body>
	<h2>Голосование за параметры игры</h2>
	<div class="form-group">
		<label for="mapSize">Размер карты</label>
		<select id="mapSize" name="mapSize">
			<option value="small">Маленькая</option>
			<option value="medium">Средняя</option>
			<option value="large">Большая</option>
		</select>
	</div>

	<div class="form-group">
		<label for="speed">Скорость игры</label>
		<select id="speed" name="speed">
			<option value="slow">Медленная</option>
			<option value="normal">Нормальная</option>
			<option value="fast">Быстрая</option>
		</select>
	</div>
	<form asp-action="RedirectToWaiting" asp-controller="Voting" method="post">
		<input value="@name" name="Name" class="form-control"/>
		<button type="submit" id="voteButton" class="btn">Проголосовать</button>
	</form>
	<script>
		window.NAME = '@name'
	</script>
	<script src="~/js/Voting.js"></script>
</body>
</html>